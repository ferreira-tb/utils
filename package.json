{
  "name": "@tb-dev/utils",
  "version": "1.0.8",
  "description": "TypeScript utils",
  "license": "MIT",
  "type": "module",
  "private": false,
  "packageManager": "pnpm@8.14.0",
  "homepage": "https://tb.dev.br/utils/",
  "author": {
    "name": "Andrew Ferreira",
    "email": "andrew.shien2@gmail.com",
    "url": "https://github.com/ferreira-tb"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ferreira-tb/utils.git"
  },
  "bugs": {
    "url": "https://github.com/ferreira-tb/utils/issues"
  },
  "keywords": [
    "utils",
    "typescript"
  ],
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json}": "prettier --write",
    "*.{?(c|m)@(j|t)s,vue}": "pnpm lint"
  },
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "bump": "miho bump -k -a .",
    "docs": "typedoc --plugin typedoc-plugin-mdn-links",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "prepare": "husky install",
    "release": "nr build && nr bump && pnpm publish",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@tb-dev/utility-types": "^1.0.9"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@tb-dev/eslint-config": "^1.5.12",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rollup": "^4.9.4",
    "taze": "^0.13.1",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.6",
    "typedoc-plugin-mdn-links": "^3.1.10",
    "typescript": "5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-dts": "^3.7.0"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  }
}
