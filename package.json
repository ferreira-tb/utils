{
  "name": "@tb-dev/utils",
  "version": "1.3.2",
  "description": "TypeScript utils",
  "license": "MIT",
  "type": "module",
  "private": false,
  "packageManager": "pnpm@8.15.2",
  "homepage": "https://tb.dev.br/utils/",
  "author": {
    "name": "Andrew Ferreira",
    "email": "andrew.shien2@gmail.com",
    "url": "https://github.com/ferreira-tb"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ferreira-tb/utils.git"
  },
  "bugs": {
    "url": "https://github.com/ferreira-tb/utils/issues"
  },
  "keywords": [
    "utils",
    "typescript"
  ],
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json}": "prettier --write",
    "*.{?(c|m)@(j|t)s,vue}": "pnpm run lint"
  },
  "scripts": {
    "build": "vite build",
    "docs": "typedoc --plugin typedoc-plugin-mdn-links",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "prepare": "husky",
    "release": "pnpm run build && pnpm publish",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@tb-dev/utility-types": "^1.2.3"
  },
  "devDependencies": {
    "@tb-dev/eslint-config": "^3.2.2",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.12",
    "typedoc-plugin-mdn-links": "^3.1.18",
    "typescript": "^5.4.3",
    "vite": "^5.2.3",
    "vite-plugin-dts": "^3.7.3"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  }
}
