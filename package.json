{
  "name": "@tb-dev/utils",
  "version": "4.1.2",
  "description": "TypeScript utils",
  "license": "MIT",
  "type": "module",
  "private": false,
  "packageManager": "pnpm@9.15.2",
  "homepage": "https://tb.dev.br/utils/",
  "author": {
    "name": "Andrew Ferreira",
    "email": "andrew.shien2@gmail.com",
    "url": "https://github.com/ferreira-tb"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ferreira-tb/utils.git"
  },
  "bugs": {
    "url": "https://github.com/ferreira-tb/utils/issues"
  },
  "keywords": [
    "utils",
    "typescript"
  ],
  "scripts": {
    "build": "vite build",
    "docs": "typedoc --plugin typedoc-plugin-mdn-links",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "lint-fix": "eslint . --config eslint.config.js --fix",
    "release": "pnpm run test && pnpm run build && pnpm publish",
    "test": "vitest",
    "test:ui": "vitest --ui --watch",
    "type-check": "tsc --noEmit",
    "update": "miho update major -t"
  },
  "devDependencies": {
    "@tb-dev/eslint-config": "^6.0.1",
    "@types/node": "^22.10.3",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.6",
    "typedoc-plugin-mdn-links": "^4.0.6",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  }
}