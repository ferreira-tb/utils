    "tslib": "^2.8.1",
    "typedoc": "^0.28.4",
    "typedoc-plugin-mdn-links": "^5.0.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.3"
  },
  "files": [
    "dist"
