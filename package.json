{
  "name": "@tb-dev/utils",
  "version": "7.0.0",
  "description": "TypeScript utils",
  "license": "MIT",
  "type": "module",
  "private": false,
  "packageManager": "pnpm@10.11.0",
  "funding": "https://github.com/sponsors/ferreira-tb",
  "homepage": "https://tb.dev.br/utils/",
  "author": {
    "name": "Andrew Ferreira",
    "email": "andrew.shien2@gmail.com",
