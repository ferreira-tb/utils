{
  "name": "@tb-dev/utils",
  "version": "3.0.2",
  "description": "TypeScript utils",
  "license": "MIT",
  "type": "module",
  "private": false,
  "packageManager": "pnpm@9.7.0",
  "homepage": "https://tb.dev.br/utils/",
  "author": {
    "name": "Andrew Ferreira",
    "email": "andrew.shien2@gmail.com",
    "url": "https://github.com/ferreira-tb"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ferreira-tb/utils.git"
  },
  "bugs": {
    "url": "https://github.com/ferreira-tb/utils/issues"
  },
  "keywords": [
    "utils",
    "typescript"
  ],
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json}": "prettier --write"
  },
  "scripts": {
    "build": "vite build",
    "docs": "typedoc --plugin typedoc-plugin-mdn-links",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "lint-fix": "eslint . --config eslint.config.js --fix",
    "prepare": "husky",
    "release": "pnpm run build && pnpm publish",
    "test": "vitest",
    "test:ui": "vitest --ui --watch",
    "type-check": "tsc --noEmit",
    "update": "miho update major -t"
  },
  "devDependencies": {
    "@tb-dev/eslint-config": "^5.2.0",
    "@types/node": "^22.2.0",
    "@vitest/ui": "^2.0.5",
    "eslint": "^9.9.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "tslib": "^2.6.3",
    "typedoc": "^0.26.5",
    "typedoc-plugin-mdn-links": "^3.2.8",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^2.0.5"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  }
}
